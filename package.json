{
  "name": "@splytech-io/mongodb",
  "version": "2.0.13",
  "description": "Splyt MongoDB Client",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "dependencies": {
    "@types/mongodb": "3.1.x",
    "mongodb": "3.2.x"
  },
  "devDependencies": {
    "@types/chai": "^4.2.0",
    "@types/koa": "^2.0.49",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.2",
    "@types/sinon": "^7.0.13",
    "chai": "^4.2.0",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "sinon": "^7.4.1",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "build": "tsc",
    "prepublishOnly": "npm run lint && npm run build && npm run test",
    "prepush": "npm run lint",
    "test": "mocha --require ts-node/register --exit 'src/*.spec.ts'"
  },
  "keywords": [
    "mongodb"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run build"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint -p . --fix",
      "git add"
    ]
  },
  "author": "Andrius Skerla",
  "license": "Apache-2.0",
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "ts": "node_modules/.bin/ts-node"
    },
    "watch": [
      "examples/*.ts",
      "index.ts"
    ],
    "ext": "ts"
  },
  "directories": {
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/splytech-io/node-mongodb.git"
  },
  "bugs": {
    "url": "https://github.com/splytech-io/node-mongodb/issues"
  },
  "homepage": "https://github.com/splytech-io/node-mongodb#readme"
}
