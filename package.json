{
  "name": "@splytech-io/mongodb",
  "version": "4.0.4",
  "description": "Splyt MongoDB Client",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "dependencies": {
    "@splytech-io/utils": "^3.8.6",
    "@types/mongodb": "^3.5.3",
    "lodash.get": "^4.4.2",
    "mongodb": "^3.5.5"
  },
  "devDependencies": {
    "@splytech-io/lint": "^1.0.0",
    "@types/chai": "^4.2.11",
    "@types/koa": "^2.11.3",
    "@types/lodash.get": "^4.4.6",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.1",
    "@types/sinon": "^9.0.0",
    "chai": "^4.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "sinon": "^9.0.2",
    "ts-node": "^8.9.0",
    "tslint": "^6.1.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "build": "tsc",
    "prepublishOnly": "npm run lint && npm run build && npm run test",
    "test": "mocha --require ts-node/register --exit 'src/*.spec.ts'"
  },
  "keywords": [
    "mongodb"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run build"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint -p . --fix"
    ]
  },
  "author": "Andrius Skerla",
  "license": "Apache-2.0",
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "ts": "node_modules/.bin/ts-node"
    },
    "watch": [
      "examples/*.ts",
      "index.ts"
    ],
    "ext": "ts"
  },
  "directories": {
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/splytech-io/node-mongodb.git"
  },
  "bugs": {
    "url": "https://github.com/splytech-io/node-mongodb/issues"
  },
  "homepage": "https://github.com/splytech-io/node-mongodb#readme"
}
