{
  "name": "@splytech-io/mongodb",
  "version": "3.0.0",
  "description": "Splyt MongoDB Client",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "dependencies": {
    "@splytech-io/lint": "^0.2.4",
    "@splytech-io/utils": "^3.6.1",
    "@types/lodash": "^4.14.149",
    "@types/mongodb": "^3.3.14",
    "lodash": "^4.17.15",
    "mongodb": "^3.5.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/koa": "^2.11.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.5.0",
    "@types/sinon": "^7.5.1",
    "chai": "^4.2.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.3",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "sinon": "^8.1.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "build": "tsc",
    "prepublishOnly": "npm run lint && npm run build && npm run test",
    "test": "mocha --require ts-node/register --exit 'src/*.spec.ts'"
  },
  "keywords": [
    "mongodb"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run build"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint -p . --fix"
    ]
  },
  "author": "Andrius Skerla",
  "license": "Apache-2.0",
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "ts": "node_modules/.bin/ts-node"
    },
    "watch": [
      "examples/*.ts",
      "index.ts"
    ],
    "ext": "ts"
  },
  "directories": {
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/splytech-io/node-mongodb.git"
  },
  "bugs": {
    "url": "https://github.com/splytech-io/node-mongodb/issues"
  },
  "homepage": "https://github.com/splytech-io/node-mongodb#readme"
}
