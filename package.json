{
  "name": "@splytech-io/mongodb",
  "version": "1.3.1",
  "description": "Splyt MongoDB Client",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "dependencies": {
    "@types/mongodb": "^3.1.19",
    "mongodb": "^3.1.11"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/koa": "^2.0.48",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "@types/sinon": "^7.0.3",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "sinon": "^6.3.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "build": "tsc",
    "prepublishOnly": "npm run lint && npm run build && npm run test",
    "prepush": "npm run lint",
    "test": "mocha --require ts-node/register --exit 'src/*.spec.ts'"
  },
  "keywords": [
    "mongodb"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run build"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint -p . --fix",
      "git add"
    ]
  },
  "author": "Andrius Skerla",
  "license": "Apache-2.0",
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "ts": "node_modules/.bin/ts-node"
    },
    "watch": [
      "examples/*.ts",
      "index.ts"
    ],
    "ext": "ts"
  },
  "directories": {
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/splytech-io/node-mongodb.git"
  },
  "bugs": {
    "url": "https://github.com/splytech-io/node-mongodb/issues"
  },
  "homepage": "https://github.com/splytech-io/node-mongodb#readme"
}
